{
  "name": "HannoverJS",
  "private": true,
  "scripts": {
    "postinstall": "cd functions && yarn",
    "start": "run-p start:**",
    "start:app": "react-app-rewired start",
    "start:functions": "netlify-lambda serve -c functions/webpack.config.js functions/src",
    "build": "run-p build:**",
    "build:app": "react-app-rewired build",
    "build:functions": "netlify-lambda build -c functions/webpack.config.js functions/src",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "got": "^9.6.0",
    "humps": "^2.0.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-google-maps": "^9.4.5",
    "react-lazy-load": "^3.0.13",
    "react-markdown": "^3.2.2",
    "react-scripts": "^1.1.4",
    "recompose": "^0.26.0",
    "styled-components": "^3.2.5"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "netlify-lambda": "^1.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.11.0",
    "react-app-rewire-workbox": "^2.0.1",
    "react-app-rewired": "^1.5.0",
    "workbox-webpack-plugin": "^3.1.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --single-quote --write",
      "git add"
    ]
  }
}
